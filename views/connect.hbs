<div class="container">
  <h3>Connect</h3>
  <p>Talk to other users of MortiSmart</p>

  <script>Handlebars.logger.level = 0;</script>

  <form action="/" method="POST" class="col s12">
    <div class="row mb-0">
      <div class="input-field col s12">
        <textarea id="post-text" class="materialize-textarea"></textarea>
        <label style="width:100%;" for="post-text">Write your post here</label>
      </div>
    </div>
    <div class="row flex">
      <button id="post-submit" class="btn btn-login teal lighten-3 m-auto">
        <i class="fa-solid fa-question left"></i>
        Submit a post
      </button>
    </div>
  </form>

  <ul id="FORUMLIST">
    {{#each forumpost}}
      <div id={{this._id}}>
        <ul>
          <li>{{this.creator}}</li>
          <li>{{this.createdAt}}</li>
          <li>{{this.content}}</li>
        </ul>
        <p>--------------------REPLIES HERE--------------------</p>
        {{#if this.replies}}
          {{#each this.replies}}
            <ul>
              <li>{{this.creator}}</li>
              <li>{{this.createdAt}}</li>
              <li>{{this.content}}</li>
            </ul>
          {{/each}}
        {{/if}}
        <div class="POST_REPLY">
          <div class="input-field col s12">
            <textarea id="reply-text" class="materialize-textarea"></textarea>
            <label style="width:100%;" for="reply-text">Write your reply here</label>
          </div>
          <button
            id="reply-submit"
            class="REPLYBUTTON btn btn-login teal lighten-3 m-auto"
          >
            <i class="fa-solid fa-question left"></i>
            Submit a reply
          </button>
        </div>
      </div>
    {{/each}}
  </ul>
</div>
<script type="module" src="scripts/connect.js"></script>